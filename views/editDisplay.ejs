<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title><%= title %></title>
  <!-- <script src="https://cdn.tailwindcss.com"></script> -->
     <link href="/asset/css/main.css" rel="stylesheet">
     <link href="/asset/css/sweetalert2.min.css" rel="stylesheet">
     <link href="/asset/css/swiper-bundle.min.css" rel="stylesheet"/>
       <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-gray-100 p-6">
  <div class="max-w-4xl mx-auto space-y-10">
    <h1 class="text-3xl font-bold text-center text-gray-800">Halaman Admin Sistem Antrian</h1>

    <!-- Teks Berjalan -->
    <section class="bg-white p-6 rounded-lg shadow">
      <h2 class="text-xl font-semibold mb-4">Edit Teks Berjalan</h2>
      <textarea id="runningText" class="w-full border border-gray-300 rounded-lg p-3 resize-none" rows="4"></textarea>
      <button onclick="submitText()" class="mt-4 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Simpan Teks</button>
    </section>

    <!-- Upload Foto -->
    <section class="bg-white p-6 rounded-xl shadow-md space-y-4">
        <form id="imageForm" enctype="multipart/form-data">
            <h2 class="text-xl font-semibold text-gray-700">Upload Foto</h2>
            <label class="block">
                <span class="text-gray-600">Pilih foto (bisa lebih dari satu):</span>
                <input type="file" name="image" id="imageUpload" accept="image/*" multiple class="mt-2 block w-full text-sm text-gray-600 file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" />
            </label>
            <div id="imagePreview" class="grid grid-cols-2 sm:grid-cols-3 gap-4"></div>
        <button type="submit" class="mt-2 px-4 py-2 bg-blue-600 text-white rounded">Upload</button>
        </form>
     
    </section>

    <!-- Upload Video -->
    <section class="bg-white p-6 rounded-xl shadow-md space-y-4">
      <form id="videoForm" enctype="multipart/form-data">
        <h2 class="text-xl font-semibold text-gray-700">Upload Video</h2>
        <label class="block">
          <span class="text-gray-600">Pilih video (bisa lebih dari satu):</span>
          <input type="file" id="videoUpload" name="video" accept="video/*" multiple class="mt-2 block w-full text-sm text-gray-600 file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm file:font-semibold file:bg-green-50 file:text-green-700 hover:file:bg-green-100" />
        </label>
        <div id="videoPreview" class="grid grid-cols-1 sm:grid-cols-2 gap-4"></div>
          <button type="submit" class="mt-2 px-4 py-2 bg-blue-600 text-white rounded">Upload</button>
      </form>
    </section>
    <!-- Tampilan Foto -->
  <section class="bg-white p-6 rounded-xl shadow">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">Foto Tersimpan</h2>
     <div class="swiper listFoto rounded-lg shadow-md">
    <div class="swiper-wrapper" id="swiperListFoto">

   
    </div>

    <!-- Navigasi -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-pagination"></div>
  </div>
  </section>

  <!-- Tampilan Video -->
  <section class="bg-white p-6 rounded-xl shadow">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">Video Tersimpan</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4" id="videoContainer">
    </div>
  </section>
  </div>
  <script src="/asset/js/sweetalert2.all.min.js"></script>
  <script src="/asset/js/swiper-bundle.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/asset/js/admin_edit.js"></script>
  <script src="/asset/js/admin_view.js"></script>
</body>
</html>
