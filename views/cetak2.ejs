        <p class="text-3xl mb-2">Sisa : <span id="sisa_anrian_atas">24</span></p>
        <button onclick="cetak('cetak_antri_atas')"  class="btn-antrian bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-6 rounded-xl text-xl w-full transition">
          Cetak Antrian ke : <span id="next_antrian_atas"></span>
        </button>
      </div>

      <!-- Prioritas -->
      <div class="bg-white p-6 rounded-xl shadow">
        <h2 class="text-xl font-bold text-red-700 mb-4">Antrian Prioritas</h2>
        <p class="text-3xl mb-2">Sisa : <span id="sisa_prioritas">5</span></p>
        <button onclick="cetak('cetak_antri_prioritas')" class="btn-antrian bg-red-600 hover:bg-red-700 text-white font-bold py-4 px-6 rounded-xl text-xl w-full transition">
          Cetak Antrian Prioritas ke : <span id="next_antrian_prioritas"></span>
        </button>
      </div>

    </div>
  </div>

  <!-- Bagian: Sisa Antrian -->
 
